%table.table.table-striped
  %thead
    %tr
      %th= sortable("id")
      %th= sortable("name")
      %th= sortable("progress")
      %th Complete
      %th= sortable("start_date")
      %th= sortable("end_date")
      %th Description
      %th= sortable("created_at")
      - if can? :destroy, Task
        %th=t '.actions', :default => t("helpers.actions")
  %tbody#uncomplete
    - @tasks.each do |task|
      %tr.uncheck
        %td= link_to task.id, task_path(task)
        %td= task.name
        %td= task.progress
        %td= check_box_tag "task[complete][#{task.id}]", task.id, task.complete
        %td= task.start_date
        %td= task.end_date
        %td= task.description
        %td=l task.created_at
        %td
          - if can? :destroy, task
            = link_to t('.edit', :default => t("helpers.links.edit")), edit_task_path(task), :class => 'btn btn-mini'
            = link_to t('.destroy', :default => t("helpers.links.destroy")), task_path(task), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'
