- model_class = TaskList
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= link_to "id" , :"#{@order}" => "id"
      %th= link_to "Name" , :"#{@order}" => "name"
      %th Description
      %th= link_to "Created_at" , :"#{@order}" => "created_at" 
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - unless @task_lists.nil?
      - @task_lists.each do |task_list|
        %tr
          %td= link_to task_list.id, task_list_path(task_list)
          %td= task_list.name
          %td= task_list.description
          %td=l task_list.created_at
          %td
            - if can? :destroy, task_list
              = link_to t('.view', :default => t("helpers.links.view")), view_task_list_path(task_list), :class => 'btn btn-mini btn-info'
              = link_to t('.edit', :default => t("helpers.links.edit")), edit_task_list_path(task_list), :class => 'btn btn-mini'
              = link_to t('.destroy', :default => t("helpers.links.destroy")), task_list_path(task_list), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'
= link_to t('.new', :default => t("helpers.links.new")), new_task_list_path, :class => 'btn btn-primary' if can? :destroy, TaskList