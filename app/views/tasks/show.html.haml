- model_class = Task
.page-header
  %h1=t '.title', :default => model_class.model_name.human
%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @task.name
%p
  %strong= model_class.human_attribute_name(:progress) + ':'
  %br
  = @task.progress
%p
  %strong= model_class.human_attribute_name(:complete) + ':'
  %br
  = @task.complete
%p
  %strong= model_class.human_attribute_name(:start_date) + ':'
  %br
  = @task.start_date
%p
  %strong= model_class.human_attribute_name(:end_date) + ':'
  %br
  = @task.end_date
%p
  %strong= model_class.human_attribute_name(:description) + ':'
  %br
  = @task.description
%p
  - unless @task.tags.blank?
    %strong= model_class.human_attribute_name(:tag) + ':'
    %br
    %ul
    - for tag in @task.tags  
      %li=tag.name
.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), view_task_list_path(:id=>"#{@task.task_list_id}"), :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_task_path(@task), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), task_path(@task), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
